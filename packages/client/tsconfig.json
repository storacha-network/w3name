{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",

    // Type Checking
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "strict": true,

    // Interop Constraints
    "forceConsistentCasingInFileNames": true,

    // Completeness
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*"
  ]
}
